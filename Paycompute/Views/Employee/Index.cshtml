@model IEnumerable<EmployeeIndexViewModel>

@{
	ViewBag.Title = "Employees";
}

<div class="row">
	<div class="col-md-12 grid-maargin">
		<div class="card">
			<div class="card-body">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">Employee List</li>
					</ol>
				</nav>
				<br/><br/>
				<div class="row">
					<di class="col-md-12 table-responsive-md"v>
						<a class="btn btn-xs btn-outline-success float-right" asp-action="Create">Create</a>
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Employee No.</th>
									<th>Photo</th>
									<th>Name</th>
									<th>Gender</th>
									<th>Designation</th>
									<th>City</th>
									<th>Joined Date</th>
									<th class="text-warning">Action</th>
								</tr> 
							</thead>
							<tbody>
								@foreach(var item in Model){
									<tr>
										<td><a asp-action="Detail" asp-route-id="@item.Id">@item.EmployeeNo</a></td>
										<td><img alt="image" src="@Url.Content(item.ImageURL)"/></td>
										<td>@item.FullName</td>
										<td>@item.Gender</td>
										<td>@item.Designation</td>
										<td>@item.City</td>
										<td>@item.DateJoined</td>
										<td>
											<a class="text-primary" asp-action="Edit" asp-route="@item.Id">
												<i class="fa-solid fa-pen"></i>Edit
											</a>
											<a class="text-success" asp-action="Detail" asp-route="@item.Id">
												<i class="fa-solid fa-bars"></i>Detail
											</a>
											<a class="text-danger" asp-action="Delete" asp-route="@item.Id">
												<i class="fa-solid fa-trash"></i>Delete
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</di>
				</div>
			</div>
		</div>
	</div>
</div>

